def proverka_tac_polya(start_x, start_y):
    print(match_results[start_x,start_y])
    if (match_results[start_x,start_y]==match_results[start_x+1,start_y] and
        match_results[start_x+2,start_y]):
        print("AAAA")



def test_krest():
    global moves_counter
    global NUL_OR_KREST
    NUL_OR_KREST = 1
    print(NUL_OR_KREST)
    #moves_counter = 1

