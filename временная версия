def A_K(local_winner):
    if local_winner == 1:
        canv.create_line(1105, 290, 1195, 375, width=3, fill="#e31e1e")
        canv.create_line(1195, 290, 1105, 375, width=3, fill="#e31e1e")
    else:
        canv.create_oval(1105,290,1195,375, outline="blue", width=2)

